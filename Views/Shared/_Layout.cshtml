<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dog Paw University </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body style="background-color: #ffefcc; ">
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                <i class="fas fa-paw text-light"></i>
                @Html.ActionLink("Dog Paw University", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")&nbsp;</li>
                    <li>@Html.ActionLink("Students", "Index", "Student")&nbsp;</li>
                    <li>@Html.ActionLink("Courses", "Index", "Course")&nbsp;</li>
                    <li>@Html.ActionLink("Instructors", "Index", "Instructor")&nbsp;</li>
                    <!--<li>@Html.ActionLink("Departments", "Index", "Department")&nbsp;</li>-->
                    <li>@Html.ActionLink("About", "About", "Home")&nbsp;</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")&nbsp;</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dog Paw University</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>